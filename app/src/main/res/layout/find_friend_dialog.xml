<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    >

    <EditText
        android:id="@+id/editText_searchFriend"
        android:hint="Your friend's email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:textCursorDrawable="@null"
        android:paddingStart="5dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        >
        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search_black_24dp_2"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_foundFriend"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/editText_searchFriend"
        app:cardElevation="0dp"
        android:layout_marginTop="10dp"
        >
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            >

        <ImageView
            android:id="@+id/imageView_friendPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_person_black_24dp"
            />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/textView_friendName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="100dp"
            android:text="No friend found."
            android:gravity="center"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/cardView_addFriend"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/imageView_addFriend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_gravity="center"
                />
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>