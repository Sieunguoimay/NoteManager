<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView

        android:id="@+id/recyclerView_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"

        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#ffffff"
        >

        <TextView
            android:id="@+id/recyclerView_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:text="This is a note short note long long long long long  long "
            android:maxLines="5"
            android:ellipsize="end"
            android:textColor="#202020"
            />

        <TextView
            android:id="@+id/textView_EditedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:text="18/01/2019 06:30 pm"
            android:textSize="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            />

    </android.support.v7.widget.CardView>

</RelativeLayout>