<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout_folder"
    android:orientation="vertical"
    android:layout_width="75dp"
    android:layout_height="95dp"
    android:gravity="center"
    android:layout_margin="4dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/recyclerView_cardView_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"


        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#ffffff"
        >

        <ImageView
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:id="@+id/recyclerView_imageView_folder"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_folder_black_24dp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/recyclerView_textView_folder"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Untitled long long long and long"
        android:textColor="#6f6f6f"
        android:textAlignment="center"
        android:maxLines="2"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:textSize="10sp"
        android:clickable="false"
        android:textStyle="bold"
        />


</LinearLayout>